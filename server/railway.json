{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "deploy": {
        "startCommand": "npm run start:prod"
      }
    },
    "pr": {
      "deploy": {
        "startCommand": "npm run start:prod"
      }
    }
  }
}
