{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@common/*": ["./src/common/*"],
      "@config/*": ["./src/config/*"],
      "@src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts", "**/*test.ts", "src/test"]
}
